<%- include('partials/header') %>
<%- include('partials/navbar') %>

<main class="container center-form"> 
    
    <div class="card registration-card"> 
        <h2 class="card-title">✍️ Author Registration</h2>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <form action="/author/register" method="POST" class="form">
            
            <div class="form-group">
                <label>Name
                  <input type="text" name="name" required class="form-control" />
                </label>
            </div>

            <div class="form-group">
                <label>Email
                  <input type="email" name="email" required class="form-control" />
                </label>
            </div>

            <div class="form-group">
                <label>Password
                  <input type="password" name="password" required class="form-control" />
                </label>
            </div>

            <div class="form-group">
                <label>Short Bio
                  <textarea name="bio" rows="3" class="form-control"></textarea>
                </label>
            </div>

            <div class="form-group">
                <label>Profile Image URL
                  <input type="url" name="profile_image_url" class="form-control" />
                </label>
            </div>
            
            <div class="form-actions mt-3">
                <button class="btn btn-primary" type="submit">Register</button>
                <a class="btn btn-secondary" href="/">Cancel</a>
            </div>
        </form>

        <p class="muted mt-2">After registration your account status will be <strong>pending</strong> until admin approves it.</p>
    </div>
</main>

</div>
</body>
</html>